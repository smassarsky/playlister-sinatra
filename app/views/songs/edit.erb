<h2>Edit Song</h2>

<form method="POST" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  
  <label>Name:</label>
  <input id="Name" type="text" name="song[name]" value="<%= @song.name %>"><br><br>

  <label>Artist Name:</label>
  <input id="Artist Name" type="text" name="artist_name" value="<%= @song.artist.name %>">

  <h3>Select Genres:</h3>

  <% @genres.each do |genre| %>
    <p><input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"<%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></p>
  <% end %>

  <input type="submit" value="Save">
</form>